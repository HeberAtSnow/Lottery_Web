@page
@model FrontEnd.Pages.SettingsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using ClassLib
@{
}

<html>
<head>
    <link rel="stylesheet" href="~/settings.css" type="text/css" />
</head>
<body class="content">
    <header>
        <h1>Welcome<br /> to the<br /> Admin page</h1>
    </header>
    <br />
    <button type="submit" class="btn effect01 reset"><a asp-page="/Index">Home</a></button>
    <br />

    <form method="post" asp-page-handler="ResetLottery">
        <h2>Reset Lottery for next drawing</h2> <br />
        <button type="submit" class="btn effect01 reset">
            Reset Lottery
        </button>
    </form>
    <br />
    <form method="post" asp-page-handler="DrawWinners">
        <h2>Draw winning numbers</h2> <br />
        <button class="btn effect01 drawNumbers" type="submit">
            Process Drawing
        </button>
    </form>
    <br />
    <form method="get" asp-page="LotteryResults">
        <h2>Results from current lottery</h2> <br />
        <button class=" btn effect01 lotteryResults" type="submit">
            Lottery Results
        </button>
    </form>
    <br />
    <form method="get" asp-page="LotteryHistoricalStats">
        <h2>All lottery statistics</h2> <br />
        <button class="btn effect01 allStats" type="submit">
            Historical Stats
        </button>
    </form>

</body>
</html>