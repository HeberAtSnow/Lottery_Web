@page
@model FrontEnd.Pages.StoreModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using ClassLib
@{
    Layout = "~/Pages/Shared/_StoreLayout.cshtml";
}



    <header>
        <h1>
            Welcome to the ticket store!
        </h1>
    </header>
    <main>
        <style>

        </style>
        <form id="ticketform" method="post">
            <input id="nameinput" name="name" type="text" placeholder="Lucky Participant Name Here" value="@Model.PlayerNombre" >

            <h2 id="ticketquestion">
                How do you want to accquire your winning tickets?
            </h2>
            <div id="buttongrid">
                <button id="numpickbut" type="submit" asp-page-handler="NumberPick">Pick By Number</button>
                <button id="quickpickbut" type="submit" asp-page-handler="QuickPick">Quick Pick</button>
            </div>
        </form>

        
        
        
        @if (Model.Selection == "NumberPick")
        {
            <h2>
                Number Pick
            </h2>
            <p>
                I don't trust computers! If you want something done right, do it yourself.
            </p>

            <form id="pyo" method="post" asp-page-handler="NumberPickPurchase">
                @for (int i = 0; i < 5; i++)
                {
                    <input type="number" name="ticket" min="0" max="69" placeholder="# @(i + 1) "/>
                }
                <input id="powerball" type="number" name="ticket" min="0" max="26" placeholder="Powerball" />
                <br />
                <button type="submit">Let's win that prize!</button>
            </form>

            @if (Model.RecentPurchase == true)
            {
                <h2>Last Ticket bought</h2>
                <table>
                    <tr>
                        @for (int i = 0; i < 5; i++)
                        {
                            <td>@Model.LastTicket[i]</td>
                        }
                        <td id="powerball">@Model.LastTicket[5]</td>
                    </tr>
                </table>
            }
        }

        @if (Model.Selection == "QuickPick")
        {
            <h2>
                Quick Pick
            </h2>
            <p>
                Let the computer do it for me!
            </p>

            <form method="post" asp-page-handler="QuickPickPurchase">
                <label for="numTickets">Purchase 1-1000 random tickets</label>
                <input name="numTickets" type="number" min="0" max="1000" value="@Model.NumQuickPicks" />
                <input type="hidden" value="@Model.PlayerNombre" name="name" />
                <br />
                <button type="submit">Give me them Tickets!</button>
            </form>
        }
        @if (Model.PurchasedTickets?.Any() ?? false)
        {
            <table>
                <tr>
                    <td>Ball1</td>
                    <td>Ball2</td>
                    <td>Ball3</td>
                    <td>Ball4</td>
                    <td>Ball5</td>
                    <td>PowerBall</td>
                    <td>WinLevel</td>
                    <td>WinAmt$</td>
                </tr>
                @foreach (var x in Model.PurchasedTickets)
                {
                    <tr>
                        <td>@x.balls[0]</td>
                        <td>@x.balls[1]</td>
                        <td>@x.balls[2]</td>
                        <td>@x.balls[3]</td>
                        <td>@x.balls[4]</td>
                        <td>@x.powerBall</td>
                        @if (x.isGraded)
                        {
                            <td>@x.winLevel</td>
                            <td>@x.winAmtDollars.ToString("c")</td>
                        }
                        else
                        {
                            <td />
                            <td />
                        }
                    </tr>
                }
            </table>
            <p>Number of purchased tickets: @Model.PurchasedTickets.Count()</p>
        }
    </main>
