@page
@model FrontEnd.Pages.StoreModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using ClassLib
@{
}

<html>
<head>
    <style>
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        body {
            margin: 2em;
            background-color: whitesmoke;
        }

        h1, h2, h3, h4, p, td, label {
            font-family: sans-serif;
        }

        #tempt{
            padding-bottom: 10px;
            border-bottom: 1px dashed black;
        }

        h3{
            text-align: center;
        }

        button {
            margin: .5em;
            background-color: red;
            border-style: solid;
            border-radius: 5px;
            border-color: black;
            color: white;
            padding: 10px 15px;
            text-align: center;
            font-size: 16px;
        }

            button:hover {
                background-color: black;
                color: white;
            }

        #numberInput {
            padding: 10px;
            border-radius: 100px;
            border-color: black;
            width: 15%;
            text-align: center;
        }

        input[type=text]{
            margin-left: 50px;
            border-radius: 100px;
            height: 35px;
            text-align: center;
        }
        #ball {
            border: 1px solid black;
            border-radius: 50%;
            padding-top: 10px;
            padding-bottom: 10px;
            text-align: center;
        }

        #powerball {
            border: 1px solid black;
            border-radius: 50%;
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: center;
            color: white;
            background-color: red;
        }

        td {
            margin-right: 15px;
            text-align: center;
        }

        #title {
            border: 3px solid black;
            border-radius: 50%;
            padding-top: 5px;
            padding-bottom: 5px;
            padding-left: 10px;
            padding-right: 10px;
            text-align: center;
            box-shadow: 2px 2px black;
        }
        #numberPicks{
            width: 500px;
        }

        #powerballTitle {
            border: 3px solid black;
            border-radius: 50%;
            padding-top: 10px;
            padding-bottom: 10px;
            padding-left: 5px;
            padding-right: 5px;
            text-align: center;
            background-color: red;
            box-shadow: 2px 2px black;
        }
        #powerPlay1 {
            background-color: black;
            margin-left: 260px;
            margin-top: -4px;
            border: 1px solid black;
        }

        #powerPlay2 {
            margin-left: -4px;
            border: 1px solid black;
        }

        header{
            margin: 10px;
        }

        .ticket{
            border: 2px dashed black;
            width: 65%;
            padding: 1em;
            background-color: lemonchiffon;
        }

        .center{
            margin-left: auto;
            margin-right: auto;
            width: 25%;
        }
        .contentCenter {
            margin-left: auto;
            margin-right: auto;
            width: 25%;
        }

        #picks{
            padding-right: 20px;
        }
    </style>
</head>
<body class="contentCenter">
    <header>
        <div>
            <h4>Snow College Lottery</h4>
        </div>
        <h1>
            <span id="title">P</span> <span id="title">O</span> <span id="title">W</span> <span id="title">E</span> <span id="title">R</span> <span id="powerballTitle"><font color="white">Ball</font></span>
        </h1>
        <div>
            <span id="powerPlay1"><font color="white">POWER</font></span> <span id="powerPlay2">PLAY</span>
        </div>
    </header>
    <main>
        <div>
            <form method="post">
                <input name="name" type="text" placeholder="Enter Name Here" value="@Model.PlayerNombre" required />

                <h2>
                    How do you want to acquire your winner tickets?
                </h2>
                <button type="submit" asp-page-handler="NumberPick">Pick By Number</button>
                <button type="submit" asp-page-handler="QuickPick">Quick Pick</button>
            </form>
        </div>

        @if(Model.PurchasedTickets?.Any() ?? false)
        {
            <p>Number of purchased tickets: @Model.PurchasedTickets.Count()</p>
        }
        

        @if (Model.Selection == "NumberPick")
        {
            <h2>
                Number Pick
            </h2>
            <p>
                I don't trust computers! If you want something done right, do it yourself.
            </p>
            <form method="post" asp-page-handler="NumberPickPurchase">
                <table id="numberPicks">
                    @for (int i = 0; i < 5; i++)
                    {
                        <tr>
                            <td>
                                <label for="ticket">Number @(i + 1) :</label>
                                <input id="ball" type="number" name="ticket" min="0" max="69" />
                                <input type="hidden" value="@Model.PlayerNombre" name="name" />
                            </td>
                        </tr>                        
                    }
                    <tr>
                        <td>
                            <label for="ticket">Powerball :</label>
                            <input id="powerball" type="number" name="ticket" min="0" max="26" />
                        </td>
                    </tr>
                                             
                </table>  

                <div class="center">
                    <button type="submit">Let's win that prize!</button>
                </div>
                                      
            </form>

            @if (Model.RecentPurchase == true)
            {
                <h2>Last Ticket bought</h2>
                <table>
                    <tr>
                        @for (int i = 0; i < 5; i++)
                        {
                            <td>@Model.LastTicket[i]</td>
                        }
                        <td id="powerball">@Model.LastTicket[5]</td>
                    </tr>
                </table>
            }
        }

        @if (Model.Selection == "QuickPick")
        {
            <h2>
                Quick Pick
            </h2>
            <p>
                Let the computer do it for me!
            </p>

            <form method="post" asp-page-handler="QuickPickPurchase">
                <label for="numTickets">Purchase 1-1000 random tickets</label>
                <input name="numTickets" id="numberInput" type="number" min="0" max="1000" value="@Model.NumQuickPicks" />
                <input type="hidden" value="@Model.PlayerNombre" name="name" />
                <br />
                <button type="submit">Give me them Tickets!</button>
            </form>
        }
        @if (Model.PurchasedTickets?.Any() ?? false)
        {
            <h2>@Model.PlayerNombre's: Ticket Picks</h2>
            <div class="ticket">

                <h3>Printed @Model.timePurchased</h3>

                <p id="tempt">
                    Don't miss your chance to win the the Jackpot!!! Buy your tickets today!
                </p>

                <table class="center">
                    <tr>
                        <td id="picks"></td>
                        <td id="picks"></td>
                        <td id="picks"></td>
                        <td id="picks"></td>
                        <td id="picks"></td>
                        <td>PWR</td>
                    </tr>
                    @foreach (var x in Model.PurchasedTickets)
                    {
                        <tr>
                            <td id="picks">@x.balls[0]</td>
                            <td id="picks">@x.balls[1]</td>
                            <td id="picks">@x.balls[2]</td>
                            <td id="picks">@x.balls[3]</td>
                            <td id="picks">@x.balls[4]</td>
                            <td id="powerBall"><font color="white">@x.powerBall</font></td>
                            @if (x.isGraded)
                            {
                                <td>@x.winLevel</td>
                                <td>@x.winAmtDollars.ToString("c")</td>
                            }
                            else
                            {
                                <td />
                                <td />
                            }
                        </tr>
                    }
                </table>
            </div>

        }
    </main>
</body>
</html>