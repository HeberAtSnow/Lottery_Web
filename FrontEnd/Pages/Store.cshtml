@page
@model FrontEnd.Pages.StoreModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

<html>
<head>
    <style>
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
        h1, h2, p, td, label {
            font-family: sans-serif;
        }

        h1 {
            font-size: 3em;
        }
        body {
            margin: 0;
            background-color: #efefef;
            text-align:center;
        }
        button {
            margin: .5em;
            background-color: #b8b8b8;
            border-style: solid;
            border-radius: 5px;
            border-color: black;
            color: black;
            padding: 10px 15px;
            text-align: center;
            font-size: 16px;
        }
        button:hover {
            background-color: black;
            color: white;
        }
        input[type=number] {
            padding: 10px;
            border-radius: 100px;
            border-color: black;
            width: 5%;
        }
        table {
            padding: 1em;
        }
        td {
            margin: .25em;
            padding: 10px;
            width: 20px;
            height: 20px;
            line-height: 20px;
            text-align: center;
            background-color: white;
            border-collapse: collapse;
            border: 1px solid black;
            border-radius: 50%;
        }
        #powerball {
            background-color: red;
        }
        .center {
            margin-left: auto;
            margin-right: auto;
        }
        .blackbar {
            color: white;
            background-color: black;
            margin: 0;
        }
    </style>
</head>
<body>
    <header>
        <div class="blackbar main">
            <p class="mainbody whitetext center">Heber's Lottery</p>
        </div>
        <h1>Welcome to the ticket store!</h1>
    </header>

    <main>
        <h2>How do you want to acquire your winner tickets?</h2>
        
        <form method="post">
            <button type="submit" asp-page-handler="NumberPick">Pick By Number</button>
            <button type="submit" asp-page-handler="QuickPick">Quick Pick</button>
        </form>

        @if (Model.Selection == "NumberPick")
        {
            <h2>Number Pick</h2>
            <p>I don't trust computers! If you want something done right, do it yourself</p>

            <form method="post" asp-page-handler="NumberPickPurchase">
                <label for="name">Lucky Participant Name:</label>
                <input name="name" type="text" placeholder="Name" />
                <p></p>
                <label for="ticket">Number 1 :</label>
                <input type="number" name="number1" min="0" max="69" />
                <label for="ticket">Number 2 :</label>
                <input type="number" name="number2" min="0" max="69" />
                <label for="ticket">Number 3 :</label>
                <input type="number" name="number3" min="0" max="69" />
                <label for="ticket">Number 4 :</label>
                <input type="number" name="number4" min="0" max="69" />
                <label for="ticket">Number 5 :</label>
                <input type="number" name="number5" min="0" max="69" />
                <label for="ticket">Powerball:</label>
                <input id="powerball" type="number" name="powerball" min="0" max="26" />
                <br />
                <button type="submit">Let's win that price!</button>
            </form>

            @if (Model.RecentPurchase == true)
            {
                <h2>Last Ticket bought</h2>
                <table class="center">
                    <tr>
                        @for (int i = 0; i < 5; i++)
                        {
                            <td>@Model.LastTicket[i]</td>
                        }
                        <td id="powerball">@Model.LastTicket[5]</td>
                    </tr>
                </table>
            }
        }

        @if (Model.Selection == "QuickPick")
        {
            <h2>Quick Pick</h2>
            <p>Let the computer do it for me!</p>

            <form method="post" asp-page-handler="QuickPickPurchase">
                <label for="name">Lucky Participant Name:</label>
                <input name="name" type="text" placeholder="Name" />
                <label for="numTickets">Purchase 1-1000 random tickets</label>
                <input name="numTickets" type="number" min="0" max="1000" />
                <br />
                <button type="submit">Give me them Tickets!</button>
            </form>
        }

        @if (Model.RecentPurchase == true)
        {
            <p>recently purchased by @Model.name</p>
            foreach (ClassLib.LotteryTicket ticket in Model.lp.p.soldTickets.Where(ticket => ticket.Player == Model.name))
            {
                <table class="center">
                    <tr>
                        @for (int i = 0; i < 5; i++)
                        {
                            <td>@ticket.balls[i]</td>
                        }
                        <td id="powerball">@ticket.powerBall</td>
                    </tr>
                </table>
            }
        }
    </main>
</body>
</html>